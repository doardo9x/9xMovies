git config --global user.name doardo9x
git config --global user.email eduardo010304@gmail.com

npx create-expo-app@latest Gmovies --template blank

cd Gmovies

// Navegação - REACT NAVIGATION
npm install @react-navigation/native
npm install @react-navigation/native-stack
npx expo install react-native-screens react-native-safe-area-context
npx expo install react-native-gesture-handler

// Estilo - Tailwind -> NativeWind
npm install nativewind
npm install --save-dev tailwindcss@3.3.2
npx tailwindcss init

// Imagens (carrosel) - 
npm i react-native-reanimated-carousel
npx expo install react-native-reanimated

// Icones -> React native heroicons
npm i react-native-heroicons

// Efeito Gradiente -> linear-Gradient
npm i expo-linear-Gradient

// Barra de Progresso -> react native Progress
npm i react-native-progress

// Fetch API -> Axios
npm i axios
